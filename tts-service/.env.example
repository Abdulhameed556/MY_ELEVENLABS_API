# TTS Microservice Environment Variables
# Copy to .env and fill in your actual values

# ElevenLabs Configuration (REQUIRED)
TTS_ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
TTS_ELEVENLABS_BASE_URL=https://api.elevenlabs.io/v1

# Application Configuration
TTS_APP_NAME=TTS Microservice
TTS_DEBUG=False
TTS_API_HOST=0.0.0.0
TTS_API_PORT=8000

# Request Settings
TTS_MAX_TEXT_LENGTH=10000
TTS_DEFAULT_CHUNK_SIZE=2500
TTS_REQUEST_TIMEOUT=30

# Rate Limiting
TTS_RATE_LIMIT_PER_MINUTE=60

# Monitoring
TTS_ENABLE_METRICS=True
TTS_METRICS_PORT=9090
TTS_LOG_LEVEL=INFO

# Security (Configure for production!)
TTS_ALLOWED_ORIGINS=["*"]

# Example production values:
# TTS_DEBUG=False
# TTS_LOG_LEVEL=WARNING
# TTS_ALLOWED_ORIGINS=["https://your-frontend-domain.com", "https://your-node-backend.com"]